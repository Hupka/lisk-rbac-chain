{
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"lib": ["dom", "dom.iterable"],
		"target": "es2019",
		"module": "esnext",
		"moduleResolution": "node",
		"newLine": "lf",
		"importHelpers": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"allowSyntheticDefaultImports": true,
		"noUnusedParameters": true,
		"pretty": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"composite": true,
		"declaration": true,
		"noImplicitAny": false,
		"rootDir": "./src",
		"outDir": "./dist",
		"jsx": "react-jsx",
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"noEmit": true
	},
	"include": ["./src/**/*.ts", "./src/**/*.json", "./src/**/*.tsx"]
}
